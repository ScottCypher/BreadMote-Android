<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/recycler_spacing"
    android:layout_marginTop="@dimen/recycler_spacing"
    android:minHeight="@dimen/recycler_item_min">

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/recycler_padding"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColorLink="@color/colorAccent"
        tools:text="Current alarm text that extends a bit: and time" />

</android.support.v7.widget.CardView>