<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt"
        style="@style/OnboardingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_6"
        app:layout_marginLeftPercent="@fraction/tutorial_text_horizontal_percent"
        app:layout_marginRightPercent="@fraction/tutorial_text_horizontal_percent"
        app:layout_marginTopPercent="@fraction/tutorial_text_vertical_percent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:src="@drawable/tutorial_6"
        app:layout_marginLeftPercent="10%"
        app:layout_widthPercent="40%" />

</android.support.percent.PercentRelativeLayout>